<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:background="#a0000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#a0000000"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/browse"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:background="@drawable/dreamote_btn"
            android:scaleType="centerInside"
            android:text="@string/browse"
            android:textColor="#fff"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/dreamote_btn"
            android:scaleType="centerInside"
            android:src="@+drawable/close"
            android:tag="CLOSE" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:background="#a0000000"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/play"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:background="@drawable/dreamote_btn"
            android:scaleType="centerInside"
            android:src="@+drawable/play"
            android:tag="PLAY" />

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_above="@id/play"
            android:layout_alignLeft="@id/play"
            android:background="@drawable/dreamote_btn"
            android:scaleType="centerInside"
            android:src="@+drawable/stop"
            android:tag="STOP" />

        <ImageButton
            android:id="@+id/rewind"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignTop="@id/play"
            android:layout_toLeftOf="@id/play"
            android:background="@drawable/dreamote_btn"
            android:longClickable="true"
            android:scaleType="centerInside"
            android:src="@+drawable/rewind"
            android:tag="REWIND" />

        <ImageButton
            android:id="@+id/fast_forward"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignTop="@id/play"
            android:layout_toRightOf="@id/play"
            android:background="@drawable/dreamote_btn"
            android:longClickable="true"
            android:scaleType="centerInside"
            android:src="@+drawable/fast_forward"
            android:tag="FAST_FORWARD" />

        <ImageButton
            android:id="@+id/pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@id/play"
            android:layout_below="@id/play"
            android:layout_marginBottom="20dp"
            android:background="@drawable/dreamote_btn"
            android:scaleType="centerInside"
            android:src="@+drawable/pause"
            android:tag="PAUSE" />

        <ImageButton
            android:id="@+id/volume_down"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@id/play"
            android:layout_below="@id/pause"
            android:background="@drawable/dreamote_btn"
            android:scaleType="centerInside"
            android:src="@+drawable/volume_down"
            android:tag="VOLUME_DOWN" />

        <ImageButton
            android:id="@+id/mute"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignTop="@id/volume_down"
            android:layout_toLeftOf="@id/volume_down"
            android:background="@drawable/dreamote_btn"
            android:scaleType="centerInside"
            android:src="@+drawable/mute"
            android:tag="MUTE" />

        <ImageButton
            android:id="@+id/volume_up"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignTop="@id/volume_down"
            android:layout_toRightOf="@id/volume_down"
            android:background="@drawable/dreamote_btn"
            android:scaleType="centerInside"
            android:src="@+drawable/volume_up"
            android:tag="VOLUME_UP" />
    </RelativeLayout>

</LinearLayout>